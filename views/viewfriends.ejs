<%- include('header.ejs') %>

<%- include('nav.ejs') %>

<div class="box searchdiv">

    <div class="finduserdiv boxinset">

        <% users.profilefriends.forEach(function(user){ %>
            
            <% all.forEach(function(every){ %>

                <% if( every._id.equals(user) ){ %>

                    <div class="finduserimage">
                        <img src="/uploads/<%=every.profileimage%>" alt="userimage">
                    </div>
                    <div class="findusername">
                        <h3><%=every.profilename%></h3>
                        <p>Friends <%=every.profilefriends.length%></p>
                    </div>
                    <div class="findviewbtn">
                        
                        <form action="finduser" method="post">
                            <input type="submit" value="View">
                            <input type="text" name="finduser" id="finduserid" value="<%=every._id%>" style="display: none;">
                        </form>

                    </div>

            <% } %>

            <% }) %>

        <% }) %>

    </div>

</div>

